# ================================
# 告警阈值配置（全局 + 可按币种覆盖）
# ================================
# ============== 告警阈值（全局 + 按币种覆盖） ==============
[ALERT_CONFIG]
# 开关
KLINE_PRICE_ALERT_ENABLED = true         # 是否启用开/高/低/收对比
ONE_LINE_KLINE_ALERT_ENABLED = true      # 是否启用一字线监控
# —— 成交量对比（A≈target_ratio×B，偏离容差 tolerance）——
VOLUME_ALERT_ENABLED     = true
VOLUME_TARGET_RATIO      = 0.20       # 例：BITDA 目标为 B(币安)的 20%
VOLUME_RATIO_THRESHOLD   = 0.6       # 例：允许相对目标值 ±20% 的偏差
# 去重与冷却（可选）
VOLUME_COMPARE_WINDOW = 30   # 用最近 15 根K线做累计（和 TIME_FRAME 一起决定“分钟”）


# —— 价格偏差（四价以“相对B”的偏差阈值，小数表示百分比）——
OPEN_DEVIATION_THRESHOLD  = 0.002        # 0.2%
HIGH_DEVIATION_THRESHOLD  = 0.001        # 0.1%
LOW_DEVIATION_THRESHOLD   = 0.001        # 0.1%
CLOSE_DEVIATION_THRESHOLD = 0.001     # 0.05%

# —— 一字线 ——
ONE_LINE_KLINE_COUNT = 4                 # 连续≥N根一字线报警（仅 BITDA）
ONE_LINE_EPSILON = 0.0                   # 一字线价差绝对容差，0 表示四价严格相等

# —— 简单节流（两类共用）——
ALERT_REQUIRE_STREAK = 1                 # 连续N轮才报（1=当轮即报）
ALERT_COOLDOWN_MINUTES = 10               # 同一时间窗冷却（分钟），0=不冷却（脚本也做了“同一end_ts只报一次”）

